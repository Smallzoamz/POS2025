# PostgreSQL Connection Settings
# Copy this file to .env and fill in your details

# Option 1: Individual Settings (for local development)
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_NAME=pos2025

# Option 2: Connection String (for Render/Cloud - takes priority if set)
# DATABASE_URL=postgresql://username:password@host:port/database

# Optional: Connection Timeout
DB_TIMEOUT=10000

# LINE Configuration (Get from LINE Developers Console)
VITE_LIFF_ID=your-liff-id-here
LINE_CHANNEL_ACCESS_TOKEN=your-messaging-api-token-here

# =====================================================
# Website Menu Sync Settings
# =====================================================
# URL of your restaurant website's sync endpoint
# For local development:
WEBSITE_SYNC_URL=http://localhost:3001/api/sync-menu
# For production (Vercel example):
# WEBSITE_SYNC_URL=https://your-site.vercel.app/api/sync-menu

# Secret key for webhook authentication (must match SYNC_SECRET on website)
WEBSITE_SYNC_SECRET=pos-website-sync-2026

