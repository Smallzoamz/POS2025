{
  "name": "pos-2025",
  "private": true,
  "version": "0.0.0",
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently -k \"cross-env BROWSER=none npx vite --host\" \"npx wait-on tcp:5173 && npx electron .\"",
    "dev:react": "vite --host",
    "electron": "wait-on tcp:5173 && electron .",
    "server": "cross-env NODE_ENV=development electron electron/server-runner.js",
    "build": "vite build",
    "dist:exe": "npm run build && electron-builder",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "dependencies": {
    "@line/liff": "^2.27.3",
    "assert-plus": "^1.0.0",
    "better-sqlite3": "^12.5.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "leaflet": "^1.9.4",
    "localtunnel": "^2.0.2",
    "pg": "^8.16.3",
    "promptpay-qr": "^0.5.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.5.0",
    "react-leaflet": "^4.2.1",
    "react-qr-code": "^2.0.18",
    "react-router-dom": "^7.11.0",
    "recharts": "^3.6.0",
    "socket.io": "^4.7.2",
    "socket.io-client": "^4.8.1"
  },
  "devDependencies": {
    "@capacitor/android": "^8.0.0",
    "@capacitor/cli": "^8.0.0",
    "@capacitor/core": "^8.0.0",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "astral-regex": "^2.0.0",
    "autoprefixer": "^10.4.23",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9",
    "eslint": "^8.55.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "postcss": "^8.5.6",
    "slice-ansi": "^7.1.2",
    "tailwindcss": "^3.4.17",
    "vite": "^7.3.0",
    "vite-plugin-pwa": "^1.2.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.pos.2025",
    "productName": "POS-2025",
    "directories": {
      "output": "dist_exe"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
